
<% layout('layouts/boilerplate')%>
    
<h1>All Businesses</h1>

<div>
    <a href="/business/new">Add Business</a>
</div>

    <% for (let b of business) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <% if(b.images.length) { %>
                    <img class="img-fluid" alt="" src="<%=b.images[0].url%>">
                    <% }else {%>
                            <img src="'https://res.cloudinary.com/dmyux4wg4/image/upload/v1642644890/YelpClone/k2dzrovqz2gxoqzq4mey.jpg'" alt="" class="img-fluid">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= b.title %> </h5>
                        <p class="card-text"><%= b.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= b.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/business/<%=b._id%>">View <%=b.title%></a>
                    </div>
                </div>
            </div>
        </div>
        
        <% }%>